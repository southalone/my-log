---
import { Icon } from "astro-icon/components";

interface Props {
	title: string;
	url: string;
	description: string;
	meta?: string;
	icon?: string;
}

const { title, url, description, meta, icon = "material-symbols:database-outline" } = Astro.props;
---

<div class="card-base w-full rounded-[var(--radius-large)] overflow-hidden relative">
	<div class="px-6 md:px-9 py-6 relative">
		<a
			href={url}
			class="transition group w-full block font-bold mb-2 text-2xl md:text-3xl text-90
			hover:text-[var(--primary)] dark:hover:text-[var(--primary)]
			active:text-[var(--title-active)] dark:active:text-[var(--title-active)]
			before:w-1 before:h-5 before:rounded-md before:bg-[var(--primary)]
			before:absolute before:top-[34px] before:left-[18px] before:hidden md:before:block"
		>
			<span class="inline-flex items-center gap-2">
				<Icon name={icon} class="text-[1.4rem] text-[var(--primary)] -translate-y-[1px]" />
				{title}
			</span>
			<Icon class="text-[var(--primary)] text-[2rem] transition hidden md:inline absolute translate-y-0.5 opacity-0 group-hover:opacity-100 -translate-x-1 group-hover:translate-x-0" name="material-symbols:chevron-right-rounded"></Icon>
		</a>

		{meta && <div class="text-sm opacity-70 mb-3">{meta}</div>}
		<div class="transition text-75">{description}</div>
	</div>
</div>


